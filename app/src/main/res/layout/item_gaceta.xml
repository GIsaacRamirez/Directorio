<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        style="@style/Widget.CardDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        card_view:elevation="@dimen/card.item.elevation"
        card_view:cardCornerRadius="@dimen/card.radius">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/fotolugarvacio"
                android:id="@+id/imgPortada"
                android:layout_margin="4dp"
                android:paddingLeft="5dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin">

                    <TextView
                        android:text="Edicion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textStyle="italic"
                        android:id="@+id/txtidGaceta" />

                    <TextView
                        android:text="Fecha"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="italic"
                        android:id="@+id/txtFecha" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
