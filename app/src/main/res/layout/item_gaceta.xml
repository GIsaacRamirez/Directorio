<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        style="@style/Widget.CardList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:elevation="@dimen/card.item.elevation"
        card_view:cardCornerRadius="@dimen/card.radius">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="88dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/fotolugarvacio"
                android:id="@+id/imgPortada"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin">

                    <TextView
                        android:text="Edicion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtidGaceta" />

                    <TextView
                        android:text="Fecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtFecha" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_vertical_margin"
                            app:srcCompat="@drawable/download_black_24px"
                            android:id="@+id/imgDownload"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            card_view:srcCompat="@drawable/delete_black_24px"
                            android:padding="@dimen/activity_vertical_margin"
                            android:visibility="gone"
                            android:id="@+id/imgDelete"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
